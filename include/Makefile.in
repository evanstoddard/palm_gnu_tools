srcdir = @srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
target_alias = @target_alias@

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

INSTALL_FILES = EntryPoints.h NewTypes.h

all: $(INSTALL_FILES)

header_dir = $(exec_prefix)/$(target_alias)/include

install: $(INSTALL_FILES)
	$(INSTALL) -d $(header_dir)
	for f in $(INSTALL_FILES); do \
	  echo $${f}; \
	  $(INSTALL_DATA) $(srcdir)/$${f} $(header_dir)/$${f}; \
	done

clean:
